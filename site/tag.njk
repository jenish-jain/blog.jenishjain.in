---
pagination:
  data: tagList
  size: 1
  alias: tagData
permalink: "/tag/{{ tagData.slug }}/"
eleventyComputed:
  title: "#{{ tagData.name }} Posts"
  tagName: "{{ tagData.name }}"
  tagSlug: "{{ tagData.slug }}"
---

{% extends "default.njk" %}

{% block seo %}
<title>#{{ tagName }} | Jenish Jain's Engineering Blog</title>
<link rel="canonical" href="{{ siteUrl }}/tag/{{ tagSlug }}/" />
<meta name="description" content="Browse posts tagged with #{{ tagName }} on Jenish Jain's engineering blog. Tech insights, tutorials, and engineering experiences." />
<meta name="keywords" content="{{ tagName }}, engineering, tech blog, Jenish Jain, software engineering{% if tagName == 'rapido' %}, engineering at Rapido{% endif %}" />

<meta property="og:type" content="website" />
<meta property="og:url" content="{{ siteUrl }}/tag/{{ tagSlug }}/" />
<meta property="og:title" content="#{{ tagName }} Posts | Jenish Jain" />
<meta property="og:description" content="Browse posts tagged with #{{ tagName }} on Jenish Jain's engineering blog" />
<meta property="og:site_name" content="Jenish Jain's Engineering Blog" />

<meta name="twitter:card" content="summary" />
<meta name="twitter:creator" content="@jenishjain6" />
<meta name="twitter:title" content="#{{ tagName }} Posts" />
<meta name="twitter:description" content="Browse posts tagged with #{{ tagName }}" />
{% endblock %}

{% block main %}
<main>
  <nav aria-label="Breadcrumb" class="breadcrumb" style="
    margin-bottom: 1.5rem;
    font-size: 0.75rem;
    color: var(--color-text-muted);
  ">
    <ol style="
      list-style: none;
      padding: 0;
      margin: 0;
      display: flex;
      flex-wrap: wrap;
      gap: 0.5rem;
    ">
      <li style="margin: 0;">
        <a href="/" style="color: var(--color-link); text-decoration: none;">Home</a>
      </li>
      <li aria-hidden="true" style="margin: 0;">&rsaquo;</li>
      <li style="margin: 0;">
        <a href="/tags/" style="color: var(--color-link); text-decoration: none;">Tags</a>
      </li>
      <li aria-hidden="true" style="margin: 0;">&rsaquo;</li>
      <li aria-current="page" style="margin: 0; color: var(--color-text-emphasized);">#{{ tagName }}</li>
    </ol>
  </nav>

  {% set tagPosts = [] %}
  {% for post in collections.posts %}
    {% if post.data.tags and post.data.tags.includes(tagName) %}
      {% set tagPosts = tagPosts.concat([post]) %}
    {% endif %}
  {% endfor %}

  <div class="heading" style="text-align: center; margin-bottom: 3rem;">
    <h1 style="display: inline-block; position: relative;">
      #{{ tagName }}
      <span style="
        position: absolute;
        bottom: -0.5rem;
        left: 0;
        right: 0;
        height: 4px;
        background: var(--color-yellow-500);
      "></span>
    </h1>
    <p class="lede">{{ tagPosts | length }} post{% if tagPosts | length != 1 %}s{% endif %} tagged with #{{ tagName }}</p>
  </div>

  <div class="post-previews">
    {% for post in tagPosts | reverse %}
    <div class="post-preview" style="--bg-image: url({{ post.data.seo_title | seoImage }})">
      {% if post.data.thumb %}
      <img src="{{ post.data.thumb }}" alt="{{ post.data.title }}" class="post-preview" loading="lazy" width="250" height="125" />
      {% endif %}
      {% if post.data.url %}
      <h2><a href="{{ post.data.url }}">{{ post.data.title }}</a></h2>
      {% else %}
      <h2><a href="/{{ post.data.slug }}/">{{ post.data.title }}</a></h2>
      {% endif %}
      <p class="description">{{ post.data.description }}</p>
      <div style="margin-top: 0.75rem; display: flex; flex-wrap: wrap; gap: 0.5rem;">
        {% for tag in post.data.tags %}
        <a href="/tag/{{ tag | slug }}/" style="
          font-size: 0.625rem;
          padding: 0.25rem 0.5rem;
          background: {% if tag == tagName %}var(--color-yellow-500){% else %}var(--color-background){% endif %};
          border: 1px solid var(--color-border);
          border-radius: 1rem;
          text-decoration: none;
          color: {% if tag == tagName %}var(--color-gray-900){% else %}var(--color-text-muted){% endif %};
        ">#{{ tag }}</a>
        {% endfor %}
      </div>
      <time style="
        display: block;
        font-size: 0.625rem;
        color: var(--color-text-muted);
        margin-top: 0.75rem;
      ">{{ post.date.toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' }) }}</time>
      <span aria-hidden="true">read this post &rarr;</span>
    </div>
    {% endfor %}
  </div>

  <div style="text-align: center; margin-top: 3rem;">
    <a href="/tags/" style="
      display: inline-block;
      padding: 0.75rem 1.5rem;
      background: var(--color-background);
      border: 2px solid var(--color-primary);
      border-radius: 0.25rem;
      color: var(--color-primary);
      text-decoration: none;
      font-weight: 600;
      transition: all 0.2s;
    " onmouseover="this.style.background='var(--color-primary)'; this.style.color='var(--color-background)';" onmouseout="this.style.background='var(--color-background)'; this.style.color='var(--color-primary)';">
      ‚Üê View All Tags
    </a>
  </div>
</main>
{% endblock %}
