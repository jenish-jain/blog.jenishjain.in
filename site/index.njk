{% extends "default.njk" %}

{% block seo %}
<title>{{ collections.posts | length }} times I’ve sat down to write something as a blog.</title>

<link rel="canonical" href="{{ siteUrl }}/{{slug}}/" />
<meta name="description" content="{{description}}" />
{% endblock %}

{% block heading %}

<div class="heading post-list">
  <h1>{{ collections.posts | length }} times I’ve sat down to write something as a blog.</h1>
  <p class="lede">{{description}}</p>
</div>

{% endblock %}

